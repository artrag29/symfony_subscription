{% extends 'base.html.twig' %}

{% block title %}News subscription{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

  {% for message in app.flashes('notice') %}
    <div class="flash-notice">
      {{ message }}
    </div>
  {% endfor %}

<div class="example-wrapper">
  <h1>Subscribe our news</h1>
    {{ form_start(form) }}
  <div class="col-md-6">{{ form_row(form.name) }}</div>
  <div>{{ form_row(form.email)}}</div>
  <div>{{ form_row(form.category) }}</div>
  <div><button type="submit" class="btn">Subscribe</button></div>
    {{ form_end(form) }}
</div>
{% endblock %}
